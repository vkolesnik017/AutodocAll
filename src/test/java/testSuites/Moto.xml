            <class name="MOTO.QC_301_MotoSelector.QC_302_AvailabilityOfMotoSelector"/>
            <class name="MOTO.QC_301_MotoSelector.QC_304_OpeningAreClosedSelector"/>
        </classes>
    </test>

    <test name="QC_875_LinkingBannerBlockToTopOnMainPage">
        <classes>
            <class name="MOTO.QC_875_LinkingBannerBlockToTopOnMainPage.QC_877_AvailabilityOfLinkingBannerBlock"/>
            <class name="MOTO.QC_875_LinkingBannerBlockToTopOnMainPage.QC_878_TransitionByClickOnLinkingBanner"/>
        </classes>
    </test>

    <test name="QC_880_BlockOfDeliveryAndPaymentMethods">
        <classes>
            <class name="MOTO.QC_880_BlockOfDeliveryAndPaymentMethods.QC_887_AvailabilityOfDeliveryAndPaymentsMethodsBlocks"/>
        </classes>
    </test>

    <test name="QC_889_SearchOnMotoSubdomain">
        <classes>
            <class name="MOTO.QC_889_SearchOnMotoSubdomain.QC_890_AvailabilityOfSearchingField"/>
            <class name="MOTO.QC_889_SearchOnMotoSubdomain.QC_891_SearchByAnyCriteria"/>
        </classes>
    </test>

